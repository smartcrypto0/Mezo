---
import type { Props } from '@astrojs/starlight/props';
import Pagination from 'virtual:starlight/components/Pagination';
---

<footer class="sl-flex starlight-footer">
  <Pagination {...Astro.props} />
</footer>

<footer class="mezo-footer">
  <div class="mezo-footer__bottom">
    <div>Â© 2025 Mezo</div>
    <div class="mezo-footer__links">
      <a href="https://mezo.org/terms" target="_blank" rel="noopener">Terms</a>
      <a href="https://mezo.org/privacy" target="_blank" rel="noopener">Privacy</a>
    </div>
  </div>
</footer>

<style>
  .starlight-footer {
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .mezo-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--sl-color-black);
    color: var(--sl-color-white);
    border-top: 1px solid var(--sl-color-gray-6);
    /* Ensure footer renders above sticky right sidebar/TOC and remains clickable */
    z-index: 9999;
    pointer-events: auto;
  }
  .mezo-footer a { 
    color: var(--sl-color-white); 
    text-decoration: none;
    position: relative;
    cursor: pointer;
  }
  .mezo-footer a:hover { text-decoration: underline; }

  .mezo-footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    padding: 1rem 1.5rem;
  }
  .mezo-footer__links { 
    display: flex; 
    gap: 1.5rem;
    position: relative;
    z-index: 11;
  }

  /* On mobile, sidebar collapses so footer should span full width */
  @media (max-width: 50rem) {
    .mezo-footer {
      left: 0;
    }
    .mezo-footer__bottom { 
      align-items: center; 
    }
  }
</style>
